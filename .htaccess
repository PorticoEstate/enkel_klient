# Add MIME types for web manifest files
AddType application/manifest+json webmanifest
AddType application/manifest+json json

# CORS Headers for IDPorten
<IfModule mod_headers.c>
    # Allow IDPorten origin
    SetEnvIf Origin "^https://saml2\.idporten\.no$" ALLOWED_ORIGIN=$0
    Header set Access-Control-Allow-Origin "%{ALLOWED_ORIGIN}e" env=ALLOWED_ORIGIN
    
    # Allow credentials (cookies, authorization headers)
    Header set Access-Control-Allow-Credentials "true" env=ALLOWED_ORIGIN
    
    # Options for preflight requests
    Header set Access-Control-Allow-Methods "GET, POST, OPTIONS" env=ALLOWED_ORIGIN
    Header set Access-Control-Allow-Headers "Origin, X-Requested-With, Content-Type, Accept, Authorization" env=ALLOWED_ORIGIN
    Header set Access-Control-Max-Age "3600" env=ALLOWED_ORIGIN
    
    # Handle OPTIONS preflight requests
    RewriteEngine On
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule>
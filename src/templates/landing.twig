{% extends 'head.twig' %}

{% block body %}
	<div class="container mt-5">
		<div class="row justify-content-center">
			<div class="col-md-12 text-center">
				<h1 class="mb-4">{{ config.site.title }}</h1>
				<h2 class="h4 mb-3">{{ config.site.subtitle }}</h2>
				<p class="lead mb-5">{{ config.site.description }}</p>
				<div class="row mt-4">
					{% if config.services.helpdesk %}
						<div class="col-md-4 mb-4">
							<a href="{{ base_path }}{{ str_base_url }}/helpdesk" class="text-decoration-none">
								<div class="card h-100 hover-shadow">
									<div class="card-body">
										<i class="fas fa-ticket-alt fa-2x mb-3 text-primary"></i>
										<h3 class="h5 card-title text-nowrap">{{ config.services.helpdesk }}</h3>
										<p class="card-text text-dark">{{ config.services.helpdesk_description }}</p>
									</div>
								</div>
							</a>
						</div>
					{% endif %}
					{% if config.services.nokkelbestilling %}
						<div class="col-md-4 mb-4">
							<a href="{{ base_path }}{{ str_base_url }}/nokkelbestilling" class="text-decoration-none">
								<div class="card h-100 hover-shadow">
									<div class="card-body">
										<i class="fas fa-key fa-2x mb-3 text-primary"></i>
										<h3 class="h5 card-title text-nowrap">{{ config.services.nokkelbestilling }}</h3>
										<p class="card-text text-dark">{{ config.services.nokkelbestilling_description }}</p>
									</div>
								</div>
							</a>
						</div>
					{% endif %}
					{% if config.services.inspection_1 %}
						<div class="col-md-4 mb-4">
							<a href="{{ base_path }}{{ str_base_url }}/inspection_1" class="text-decoration-none">
								<div class="card h-100 hover-shadow">
									<div class="card-body">
										<i class="fas fa-clipboard-check fa-2x mb-3 text-primary"></i>
										<h3 class="h5 card-title text-nowrap">{{ config.services.inspection_1 }}</h3>
										<p class="card-text text-dark">{{ config.services.inspection_1_description }}</p>
									</div>
								</div>
							</a>
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>

	<style>
		.hover-shadow:hover {
			box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
			transform: translateY(-3px);
			transition: all 0.2s ease-in-out;
		}
	</style>
{% endblock %}
